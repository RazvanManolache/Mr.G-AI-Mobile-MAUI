<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MrG.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MrG.Maui"
   FlyoutHeaderBehavior="CollapseOnScroll"
    Title="MrG AI">
    
    <FlyoutItem Title="Action">
        <Tab>
            <ShellContent Title="Actions" Route="actions"
                     ContentTemplate="{DataTemplate local:ActionList}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Requests">
        <Tab>
            <ShellContent Title="Requests" Route="requests"
                     ContentTemplate="{DataTemplate local:RequestList}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <Tab>
            <ShellContent Title="Settings" Route="settings"
                     ContentTemplate="{DataTemplate local:Settings}" />
        </Tab>
    </FlyoutItem>


</Shell>
