<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrG.Maui.Field.SelectField">
    <Grid ColumnDefinitions="*,2*">
        <Label 
        Text="{Binding Name}"
        VerticalOptions="Center" 
        HorizontalOptions="Center" Grid.Column="0" />

        <Picker Title="{Binding Name}" ItemsSource="{Binding Collection.Values}"  ItemDisplayBinding="{Binding Value}" SelectedItem="{Binding SelectValue}"  Grid.Column="1">
            
        </Picker>
    </Grid>
</ContentView>
